{
  "name": "escapehatch",
  "version": "0.1.0",
  "private": true,
  "description": "Creator Co-Op Hub platform monorepo",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --parallel --filter @escapehatch/control-plane --filter @escapehatch/web dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @escapehatch/web test:e2e",
    "test:all": "pnpm test && pnpm test:e2e"
  }
}
